<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Task2_1_Setup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/origrrinal"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:background="@color/white"
            android:fontFamily="@font/schoolbell"
            android:text="Sammie Says!"
            android:textAlignment="center"
            android:textColor="#420ED6"
            android:textSize="36sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#F02E8B" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="@drawable/origrrinal"
        android:orientation="vertical"
        android:weightSum="10">

        <TextView
            android:id="@+id/hint"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:layout_weight="1.5"
            android:fontFamily="@font/schoolbell"
            android:gravity="center"
            android:text='Say the word "dog"'
            android:textAlignment="center"
            android:textColor="#3F51B5"
            android:textSize="35sp"
            android:textStyle="bold" />

        <GridLayout
            android:id="@+id/mainGrid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:alignmentMode="alignMargins"
            android:columnCount="3"
            android:columnOrderPreserved="false"
            android:padding="10dp"
            android:rowCount="2">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="355dp"
                android:layout_height="437dp"
                android:layout_row="0"
                android:layout_column="0"
                app:srcCompat="@drawable/emma3" />
        </GridLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5">

            <Button
                android:id="@+id/task1_home"
                android:layout_width="91dp"
                android:layout_height="72dp"
                android:layout_centerInParent="true"
                android:background="@drawable/homebtn"
                android:fontFamily="@font/schoolbell"
                android:textColor="#420ED6"
                android:textSize="25dp" />


        </RelativeLayout>
    </LinearLayout>
</LinearLayout>