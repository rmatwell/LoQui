<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homepage">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#B0AAE8F1"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <edu.odu.cs411.loqui.MyProgressBar
            android:id="@+id/step_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:selectableItemBackground"
            app:completeColor="@color/colorAccent"
            app:noOfSteps="15"
            app:waitingColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B0AAE8F1"
            android:fontFamily="@font/schoolbell"
            android:text="Hello! Choose an activity!"
            android:textColor="#3F51B5"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" />

        <View
            android:id="@+id/divider7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F02E8B" />

        <LinearLayout
            android:id="@+id/ll5"
            android:layout_width="match_parent"
            android:layout_height="880dp"
            android:layout_weight="0.3"
            android:background="#B0AAE8F1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/view4"
                        android:layout_width="359dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/fun" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="#eed2e8"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/schoolbell"
                        android:gravity="center"
                        android:text="Story Time"
                        android:textAlignment="center"
                        android:textColor="#171785"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/go1"
                        android:layout_width="85dp"
                        android:layout_height="84dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/playbutton"
                        android:fontFamily="@font/schoolbell"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="25dp" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/divider6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F02E8B" />

        <LinearLayout
            android:id="@+id/ll5"
            android:layout_width="match_parent"
            android:layout_height="880dp"
            android:layout_weight="0.3"
            android:background="#B0AAE8F1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/view2"
                        android:layout_width="359dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/sammiespeech" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="#b3b3ff"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/schoolbell"
                        android:gravity="center"
                        android:text="Sammie Says"
                        android:textAlignment="center"
                        android:textColor="#171785"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/go2"
                        android:layout_width="85dp"
                        android:layout_height="84dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/playbutton"
                        android:fontFamily="@font/schoolbell"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="25dp" />

                    <Button
                        android:id="@+id/complete"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:layout_weight="0.5"
                        android:background="#b3b3ff"
                        android:text="Complete " />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F02E8B" />

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="match_parent"
            android:layout_height="880dp"
            android:layout_weight="0.3"
            android:background="#B0AAE8F1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/view3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/avat" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:background="#f2e3c6"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/schoolbell"
                        android:gravity="center"
                        android:text="Emotion Quest!"
                        android:textAlignment="center"
                        android:textColor="#171785"
                        android:textSize="23sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/go3"
                        android:layout_width="85dp"
                        android:layout_height="84dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/playbutton"
                        android:fontFamily="@font/schoolbell"
                        android:textAlignment="center"
                        android:textColor="#420ED6"
                        android:textSize="25dp" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/divider6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F02E8B" />

        <LinearLayout
            android:id="@+id/ll5"
            android:layout_width="match_parent"
            android:layout_height="750dp"
            android:layout_weight="0.3"
            android:background="#B0AAE8F1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                android:layout_width="227dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/pp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="194dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="#9C27B0"
                android:fontFamily="@font/schoolbell"
                android:text="References"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>

