<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:background="@color/babyblueback"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/back2_1"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_width="150dp"
        android:layout_height="81dp"

        android:layout_marginStart="28dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/home_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/next_face"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/next_face"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_width="204dp"
        android:layout_height="77dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/next_face_button"
        app:layout_constraintBaseline_toBaselineOf="@+id/back2_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/back2_1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="412dp"
        android:layout_height="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/face_match" />

    <ImageView
        android:id="@+id/emotion_match"
        android:layout_width="142dp"
        android:layout_height="162dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:layout_editor_absoluteX="24dp"
        tools:srcCompat="@tools:sample/avatars[4]"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/picture_taken"
        android:layout_width="145dp"
        android:layout_height="164dp"
        tools:layout_editor_absoluteX="237dp"
        tools:layout_editor_absoluteY="121dp"
        tools:srcCompat="@tools:sample/avatars[4]"
        app:layout_constraintBottom_toTopOf="@+id/back2_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/visual_support"
        android:layout_width="178dp"
        android:layout_height="156dp"
        android:layout_marginStart="116dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toTopOf="@+id/back2_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars[11]" />

</androidx.constraintlayout.widget.ConstraintLayout>